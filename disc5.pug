doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./style/style.css")
        script(src="./scripts/script.js" defer)
        title Document
    body
        .main
            img(src="./img/bluey-trademark-white.svg", alt="")
            h2 Bonus Disc: Bluey's Big Play and more
        .image
            img(src="./img/backdrop_1.jpg", alt="f")
        .menu#bottom_menu
            .popup
                input.popup_button#bluey-big-play(type="checkbox")
                label.popup_label(for="bluey-big-play") Bluey's Big Play
                .menu_popup.flex_container
                    a(target="_blank" href="https://events.bluey.tv/") Website
                    a(target="_blank" href="#") Watch
            .popup
                input.popup_button#disney-jr-special(type="checkbox")
                label.popup_label(for="disney-jr-special") Disney Junior Special
                .menu_popup.flex_container
                    a(target="_blank" href="#") Outdoor Adventures
                    a(target="_blank" href="#") In The Garden
                    a(target="_blank" href="#") School Friends
                    a(target="_blank" href="#") Let's Dance
                    a(target="_blank" href="#") BEACCHHH!
            .popup
                input.popup_button#online-content(type="checkbox")
                label.popup_label(for="online-content") Online Content
                .menu_popup.grid_container
                    a(target="_blank" href="https://www.bluey.tv/make/bluey-fathers-day-card/") Father's day
                    a(target="_blank" href="https://www.bluey.tv/make/bluey-mothers-day-card/") Mother's day
                    a(target="_blank" href="https://www.bluey.tv/blog/blueys-joining-macys-thanksgiving-parade/") Macy's parade
